<div id='user-attend-button-<%= tournament.id %>'>
    <% if tournament.users.include?(current_user) %>
        <%= link_to tournament_attendances_remove_path(:user_id => current_user.id, :tournament_id => tournament.id), remote: true, data: {confirm: 'Are you sure?'} do %>
            <button type="button" class="btn btn-lg btn-danger">Afmeld turnering</button>
        <% end %>
    <% else %>
        <%= link_to tournament_attendances_path(:user_id => current_user.id, :tournament_id => tournament.id), method: :post, :remote => true do %>
            <button type="button" class="btn btn-lg btn-success">Tilmeld turnering</button>
        <% end %>
    <% end %>
</div>
