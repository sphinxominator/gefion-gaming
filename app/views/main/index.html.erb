<!DOCTYPE html>
<html lang="en">

<%= render 'main/head' %>

<body id="page-top" class="index">

<%= render 'main/navbar' %>

<%= render 'main/sections/header' %>

<%= render 'main/sections/games' %>

<%= render 'main/sections/countdown' %>

<% if current_user %>
    <section class="visible-xs mobile-user-wrapper" id="user-section">
       <%= render 'users/userinfo' %>
    </section>

    <div style="display: none">
      <%= render 'users/userinfo' %>
      <%= render 'users/alerts' %>
    </div>

    <%= render 'main/teammodals' %>
<% end %>

<%= render 'main/sections/footer' %>

<%= render 'main/gamemodals' %>

<div class="scroll-top page-scroll visible-xs visble-sm">
  <a class="btn btn-primary" href="#page-top">
    <i class="fa fa-chevron-up"></i>
  </a>
</div>

<%= javascript_include_tag 'application' %>
<script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

</body>

</html>
